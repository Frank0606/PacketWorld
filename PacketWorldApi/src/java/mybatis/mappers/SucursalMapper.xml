<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SucursalMapper">

    <!-- =======================================================
         RESULT MAP
    ======================================================== -->
    <resultMap id="SucursalMap" type="pojo.Sucursal">
        <id property="idSucursal" column="idSucursal"/>
        <result property="codigo" column="codigo"/>
        <result property="nombreCorto" column="nombreCorto"/>
        <result property="estatus" column="estatus"/>
        <result property="calle" column="calle"/>
        <result property="numero" column="numero"/>
        <result property="colonia" column="colonia"/>
        <result property="codigoPostal" column="codigoPostal"/>
        <result property="ciudad" column="ciudad"/>
        <result property="estado" column="estado"/>
    </resultMap>

    <!-- =======================================================
         LISTAR TODAS
    ======================================================== -->
    <select id="obtenerTodos" resultMap="SucursalMap">
        SELECT *
        FROM Sucursal;
    </select>

    <!-- =======================================================
         OBTENER POR ID
    ======================================================== -->
    <select id="obtenerPorId" parameterType="int" resultMap="SucursalMap">
        SELECT *
        FROM Sucursal
        WHERE idSucursal = #{idSucursal};
    </select>

    <!-- =======================================================
         OBTENER POR CÓDIGO
    ======================================================== -->
    <select id="obtenerPorCodigo" parameterType="string" resultMap="SucursalMap">
        SELECT *
        FROM Sucursal
        WHERE codigo = #{codigo};
    </select>

    <!-- =======================================================
         REGISTRAR
    ======================================================== -->
    <insert id="registrar" parameterType="pojo.Sucursal">
        INSERT INTO Sucursal
        (codigo, nombreCorto, estatus, calle, numero, colonia, codigoPostal, ciudad, estado)
        VALUES
        (#{codigo}, #{nombreCorto}, #{estatus}, #{calle}, #{numero}, #{colonia},
         #{codigoPostal}, #{ciudad}, #{estado});
    </insert>

    <!-- =======================================================
         EDITAR (sin código ni estatus)
    ======================================================== -->
    <update id="editar" parameterType="pojo.Sucursal">
        UPDATE Sucursal SET
            nombreCorto = #{nombreCorto},
            calle = #{calle},
            numero = #{numero},
            estatus = #{estatus},
            colonia = #{colonia},
            codigoPostal = #{codigoPostal},
            ciudad = #{ciudad},
            estado = #{estado}
        WHERE idSucursal = #{idSucursal};
    </update>

    <!-- =======================================================
         DAR DE BAJA
    ======================================================== -->
    <update id="darBaja" parameterType="int">
        UPDATE Sucursal
        SET estatus = 'INACTIVA'
        WHERE idSucursal = #{idSucursal};
    </update>
    
    <delete id="eliminarSucursal" parameterType="int">
        DELETE FROM Sucursal 
        WHERE idSucursal = #{idSucursal}
    </delete>

</mapper>
