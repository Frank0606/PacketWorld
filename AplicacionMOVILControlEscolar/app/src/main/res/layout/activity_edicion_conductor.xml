<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EdicionConductorActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Fondo -->
        <ImageView
            android:id="@+id/img_fondo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_app"
            android:scaleType="centerCrop"
            android:alpha="0.05"
            android:contentDescription="@null" />

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/tv_titulo_edicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil del Conductor"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- FOTO -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_foto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_titulo_edicion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_foto_conductor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/ib_actualizar_foto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_action_editar"
            android:padding="8dp"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="@id/cv_foto"
            app:layout_constraintEnd_toEndOf="@id/cv_foto" />

        <!-- INFO FIJA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_info_fija"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/cv_foto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/ll_info_fija"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_numero_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Número Personal: "
                    android:textStyle="bold"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tv_rol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rol: "
                    android:textStyle="bold"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tv_sucursal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sucursal: "
                    android:textStyle="bold"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tv_correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo: "
                    android:textStyle="bold"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tv_curp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CURP: "
                    android:textStyle="bold"
                    android:padding="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CAMPOS EDITABLES -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_editables"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/card_info_fija"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Nombre -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textStyle="bold"
                    android:paddingBottom="4dp"/>

                <EditText
                    android:id="@+id/et_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Escribe tu nombre"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edit_text" />

                <!-- Apellido Paterno -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apellido Paterno"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"/>

                <EditText
                    android:id="@+id/et_apellido_paterno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Escribe tu apellido paterno"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edit_text" />

                <!-- Apellido Materno -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apellido Materno"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"/>

                <EditText
                    android:id="@+id/et_apellido_materno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Escribe tu apellido materno"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edit_text" />

                <!-- Número de Licencia -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Número de Licencia"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"/>

                <EditText
                    android:id="@+id/et_licencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Escribe tu número de licencia"
                    android:inputType="text"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edit_text" />

                <!-- Contraseña -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contraseña: "
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"/>

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Escribe tu contraseña"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edit_text" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- BOTONES -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/card_editables"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btn_cancelar"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="Cancelar"
                android:paddingStart="28dp"
                android:paddingEnd="28dp"
                android:backgroundTint="#BC9E82"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_actualizar"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="#BC9E82"
                android:paddingStart="28dp"
                android:paddingEnd="28dp"
                android:text="Actualizar "
                android:textColor="@color/white" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
